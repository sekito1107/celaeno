<div class="flex flex-col items-center justify-center p-8">
  <h1 class="text-2xl font-serif mb-8 text-gray-300">
    Game ID: <%= @game.id %>
  </h1>

  <div class="border border-gray-700 p-8 rounded-lg bg-gray-900/50">
    <h2 class="text-xl mb-4 text-center">Card Component Preview</h2>
    <div class="flex gap-4">
      <%# Component Test: Display a static card %>
      <%= render Game::CardComponent.new(
            card_entity: Card.new(
              name: "試作カード",
              cost: 3,
              attack: 2,
              hp: 4
            )
          ) %>
    </div>
  </div>

  <div class="mt-8">
    <%= button_to "降伏する (Debug)", game_surrender_path(@game), method: :post, class: "bg-red-900 text-white px-4 py-2 rounded hover:bg-red-700 transition" %>
  </div>
</div>
